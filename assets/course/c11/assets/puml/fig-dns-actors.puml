@startuml

skinparam backgroundColor white
skinparam shadowing false
skinparam roundcorner 12
skinparam defaultFontName Arial
skinparam defaultFontSize 14

title DNS: actori si roluri

rectangle "Client side" {
  component "Stub resolver\n(OS / browser)" as STUB
}

rectangle "Network" {
  component "Recursive resolver\n+ cache" as REC
}

rectangle "Authoritative world" {
  component "Root servers" as ROOT
  component "TLD servers" as TLD
  component "Authoritative servers\n(zone owner)" as AUTH
}

STUB --> REC : DNS query\n(recursive)
REC --> ROOT : iterative queries
REC --> TLD : iterative queries
REC --> AUTH : authoritative query
REC --> STUB : response\n(cached)

@enduml