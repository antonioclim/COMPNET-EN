@startuml
skinparam backgroundColor white
skinparam shadowing false
skinparam roundcorner 12
skinparam defaultFontName Arial
skinparam defaultFontSize 14

title LAN - WAN - Internet (scala)

package "LAN (camera / cladire)" {
  [PC] as lan1
  [Switch] as lansw
  [Server] as lan2
  lan1 --> lansw 
  lansw --> lan2
}

package "WAN (intre retele LAN)" {
  [Router R1] as r1
  [Router R2] as r2
  r1 <--> r2 : legatura WAN
}

cloud "Internet" as inet

lansw --> r1
r2 --> inet

note bottom of inet
  Internet = interconectare globala
  a multor retele (WAN-uri, ISP-uri, AS-uri)
end note
@enduml
