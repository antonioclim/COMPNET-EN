@startuml
skinparam backgroundColor white
skinparam shadowing false
skinparam roundcorner 12
skinparam defaultFontName Arial
skinparam defaultFontSize 14

title Comutare de circuite vs comutare de pachete

package "Comutare de circuite (circuit switching)" {
  [A] as ca
  [Comutator 1] as cs1
  [Comutator 2] as cs2
  [B] as cb

  ca --> cs1 : canal dedicat
  cs1 --> cs2 : canal dedicat
  cs2 --> cb : canal dedicat

  note bottom of cs1
    Resurse rezervate pe durata convorbirii
  end note
}

package "Comutare de pachete (packet switching)" {
  [A] as pa
  [Router 1] as pr1
  [Router 2] as pr2
  [Router 3] as pr3
  [B] as pb

  pa --> pr1

  pr1 --> pr2 : pachet 1
  pr2 --> pb : pachet 1

  pr1 --> pr3 : pachet 2
  pr3 --> pb : pachet 2

  note bottom of pr1
    Fiecare pachet poate urma alt traseu
  end note
}
@enduml
