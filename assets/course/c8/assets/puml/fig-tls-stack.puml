@startuml
skinparam backgroundColor white
skinparam shadowing false
skinparam roundcorner 12
skinparam defaultFontName Arial
skinparam defaultFontSize 14

rectangle "Application\n(HTTP, SMTP, ...)" as app
rectangle "TLS" as tls
rectangle "TCP" as tcp
rectangle "IP" as ip
rectangle "Link Layer" as l2

app -down-> tls
tls -down-> tcp
tcp -down-> ip
ip -down-> l2

@enduml
