{
  "project": "A05",
  "pcap_relpath": "artifacts/pcap/traffic_e2.pcap",
  "decode_as": [],
  "rules": [
    {
      "id": "R1",
      "filter": "tcp.flags.syn==1 && tcp.flags.ack==0",
      "condition": ">= 20",
      "description": "At least 20 SYN packets (port scan)."
    },
    {
      "id": "R2",
      "filter": "tcp.flags.syn==1 && tcp.flags.ack==1",
      "condition": ">= 1",
      "description": "At least one SYNâ€‘ACK (open port)."
    },
    {
      "id": "R3",
      "filter": "tcp.flags.reset==1",
      "condition": ">= 1",
      "description": "At least one RST (closed port)."
    },
    {
      "id": "R4",
      "filter": "tcp.len>0 && (frame contains \"SSH\" || frame contains \"HTTP\" || frame contains \"Server:\")",
      "condition": ">= 1",
      "description": "Minimal fingerprinting (banner/header)."
    }
  ]
}
