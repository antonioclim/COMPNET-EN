{
  "project": "S10",
  "pcap_relpath": "artifacts/pcap/traffic_e2.pcap",
  "decode_as": [],
  "rules": [
    {
      "id": "R1",
      "filter": "tcp.dstport==5010 && tcp.flags.syn==1 && tcp.flags.ack==0",
      "condition": ">= 1",
      "description": "Handshake to the synchronisation service."
    },
    {
      "id": "R2",
      "filter": "tcp.port==5010 && frame contains \"MANIFEST\"",
      "condition": ">= 1",
      "description": "Manifest transfer/request."
    },
    {
      "id": "R3",
      "filter": "tcp.port==5010 && (frame contains \"SHA256\" || frame contains \"sha256\")",
      "condition": ">= 1",
      "description": "A SHA-256 hash appears in the manifest or response."
    },
    {
      "id": "R4",
      "filter": "tcp.port==5010 && (frame contains \"PUSH\" || frame contains \"PULL\" || frame contains \"GET\" || frame contains \"PUT\")",
      "condition": ">= 1",
      "description": "At least one synchronisation operation (push/pull)."
    },
    {
      "id": "R5",
      "filter": "tcp.port==5010 && (tcp.flags.fin==1 || tcp.flags.reset==1)",
      "condition": ">= 1",
      "description": "Controlled session closure."
    }
  ]
}
