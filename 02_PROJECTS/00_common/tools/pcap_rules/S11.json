{
  "project": "S11",
  "pcap_relpath": "artifacts/pcap/traffic_e2.pcap",
  "decode_as": [],
  "rules": [
    {
      "id": "R1",
      "filter": "udp.dstport==5111 && ip.dst==239.10.11.12",
      "condition": ">= 1",
      "description": "At least one UDP multicast announcement (service discovery)."
    },
    {
      "id": "R2",
      "filter": "tcp.dstport==8080 && tcp.flags.syn==1 && tcp.flags.ack==0",
      "condition": ">= 1",
      "description": "Handshake to the API Gateway."
    },
    {
      "id": "R3",
      "filter": "tcp.port==8080 && frame contains \"GET \"",
      "condition": ">= 1",
      "description": "HTTP request to the gateway."
    },
    {
      "id": "R4",
      "filter": "tcp.port==8080 && frame contains \"HTTP/1.1 200\"",
      "condition": ">= 1",
      "description": "200 response through the gateway."
    },
    {
      "id": "R5",
      "filter": "(tcp.port==5101 || tcp.port==5102) && frame contains \"HTTP/1.1\"",
      "condition": ">= 1",
      "description": "The gateway communicates with at least one microservice (HTTP upstream)."
    }
  ]
}
