{
  "project": "S05",
  "pcap_relpath": "artifacts/pcap/traffic_e2.pcap",
  "decode_as": [],
  "rules": [
    {
      "id": "R1",
      "filter": "tcp.dstport==8080 && tcp.flags.syn==1 && tcp.flags.ack==0",
      "condition": ">= 1",
      "description": "Client â†’ load balancer handshake."
    },
    {
      "id": "R2",
      "filter": "tcp.port==8080 && frame contains \"GET \"",
      "condition": ">= 1",
      "description": "HTTP request to the load balancer."
    },
    {
      "id": "R3",
      "filter": "(tcp.dstport==8081 || tcp.dstport==8082 || tcp.dstport==8083) && tcp.flags.syn==1 && tcp.flags.ack==0",
      "condition": ">= 1",
      "description": "The load balancer initiates a connection to at least one backend."
    },
    {
      "id": "R4",
      "filter": "(tcp.port==8081 || tcp.port==8082 || tcp.port==8083) && frame contains \"/health\"",
      "condition": ">= 1",
      "description": "At least one health check (/health) to a backend exists."
    },
    {
      "id": "R5",
      "filter": "tcp.port==8080 && frame contains \"HTTP/1.1 200\"",
      "condition": ">= 1",
      "description": "Final 200 response to the client."
    }
  ]
}
